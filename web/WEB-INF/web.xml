<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>verifyuser</servlet-name>
        <servlet-class>verifyuser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>activeservlet</servlet-name>
        <servlet-class>activeservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dethservlet</servlet-name>
        <servlet-class>dethservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>recoverservlet</servlet-name>
        <servlet-class>recoverservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>killsession</servlet-name>
        <servlet-class>killsession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>verifyuser</servlet-name>
        <url-pattern>/verifyuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>activeservlet</servlet-name>
        <url-pattern>/activeservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dethservlet</servlet-name>
        <url-pattern>/dethservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>recoverservlet</servlet-name>
        <url-pattern>/recoverservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>killsession</servlet-name>
        <url-pattern>/killsession</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
